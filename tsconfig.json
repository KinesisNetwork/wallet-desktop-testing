{
    "version": "2.8.3",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./src",
        "types": [
            "node"
        ],
        "noUnusedLocals": true
    },
    "compileOnSave": true,
    "filesGlob": [
        "./src/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}